<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ucbug">
        <createTable tableName="BASE_COUNTRY">
            <column name="ISO_CODE" type="VARCHAR(2)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_BASE_COUNTRY"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="ucbug">
        <createTable tableName="BASE_CURRENCY">
            <column name="CODE" type="VARCHAR(3)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_BASE_CURRENCY"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="ucbug">
        <createTable tableName="BASE_EXCHANGE">
            <column name="MIC" type="VARCHAR(4)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_BASE_EXCHANGE"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="ucbug">
        <createTable tableName="BASE_NEW_ENTITY">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_BASE_NEW_ENTITY"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="SECOND_UNIQUE_COLUMN" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="ucbug">
        <addUniqueConstraint columnNames="SECOND_UNIQUE_COLUMN" constraintName="UC_BASENEWENTITY_SECONDUNIQUEC"
                             tableName="BASE_NEW_ENTITY"/>
    </changeSet>
    <changeSet id="6" author="ucbug">
        <addUniqueConstraint columnNames="NAME" constraintName="UC_BASE_COUNTRY_NAME" tableName="BASE_COUNTRY"/>
    </changeSet>
    <changeSet id="7" author="ucbug">
        <addUniqueConstraint columnNames="NAME" constraintName="UC_BASE_CURRENCY_NAME" tableName="BASE_CURRENCY"/>
    </changeSet>
    <changeSet id="8" author="ucbug">
        <addUniqueConstraint columnNames="NAME" constraintName="UC_BASE_EXCHANGE_NAME" tableName="BASE_EXCHANGE"/>
    </changeSet>
    <changeSet id="9" author="ucbug">
        <addUniqueConstraint columnNames="NAME" constraintName="UC_BASE_NEW_ENTITY_NAME" tableName="BASE_NEW_ENTITY"/>
    </changeSet>
</databaseChangeLog>